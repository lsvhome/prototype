<?xml version="1.0" encoding="UTF-8"?>
<Include xmlns="http://schemas.microsoft.com/wix/2003/01/wi">
  <Fragment Id="DataFolderDlg">
    <UI Id="DataFolderDlg">
      <Binary Id="DefBannerBitmap" SourceFile="Wix\Resources\WiXDefBannerBitmap.bmp" />
      <Dialog Id="DataFolderDlg" X="50" Y="50" Width="370" Height="270" Title="!(loc.DataDirDlg_Title)">

        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="!(loc.WixUINext)" />
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
          <Publish Event="SpawnDialog" Value="CancelDlg" />
        </Control>

        <Control Id="FolderLabel" Type="Text" X="20" Y="60" Width="290" Height="30" NoPrefix="yes" Text="!(loc.DataDirDlgFolderLabel)" />
        <Control Id="Folder" Type="PathEdit" X="20" Y="100" Width="320" Height="18" Property="FEXDATAFOLDER" Indirect="no" />

        <Control Id="AutoStartCheckbox" Type="CheckBox" X="20" Y="160" Width="290" Height="18" Property="AUTOSTART" CheckBoxValue="1" Text="!(loc.DataDirDlgAutoStartLabelText)" />

        <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.DataDirDlgDescription)" />
        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.DataDirDlgTitle)" />

        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.InstallDirDlgBannerBitmap)" />

        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />

      </Dialog>
    </UI>
  </Fragment>
</Include>
